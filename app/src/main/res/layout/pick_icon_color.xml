<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#22000000">

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="172dp"
        android:background="@drawable/abc_popup_background_mtrl_mult"
        android:id="@+id/viewPIC"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:background="#ffddd9a6"
                android:src="#ffffffff"
                android:padding="2dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:background="#ffddd9a6"
                android:src="#ff7f7f7f"
                android:padding="2dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton3"
                android:background="#ffddd9a6"
                android:layout_margin="2dp"
                android:src="#ffff0000"
                android:padding="2dp"
                android:layout_column="2"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton4"
                android:background="#ffddd9a6"
                android:padding="2dp"
                android:src="#ffffff00"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton5"
                android:background="#ffddd9a6"
                android:adjustViewBounds="false"
                android:padding="2dp"
                android:src="#ffff8000"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton6"
                android:background="#ffddd9a6"
                android:padding="2dp"
                android:src="#ff00ff00"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton7"
                android:background="#ffddd9a6"
                android:padding="2dp"
                android:src="#ff0000ff"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton8"
                android:background="#ffddd9a6"
                android:padding="2dp"
                android:src="#ff00ffff"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton9"
                android:background="#ffddd9a6"
                android:padding="2dp"
                android:src="#fffb00ff"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_margin="2dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Icon..."
            android:id="@+id/textView4"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="#ff000000"
            android:backgroundTint="#ffd0d0d0"
            android:backgroundTintMode="add"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_weight="1" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/seekBar"
            android:progress="100"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>